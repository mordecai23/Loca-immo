<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/laydeposer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_list">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"

        >

        <TextView
            android:id="@+id/titredeposer"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/carter_one"
            android:gravity="center"
            android:text="Déposer une annonce"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            android:textStyle="bold|italic"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Type du bien  "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerdeposer"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:animateLayoutChanges="true"
            android:animationCache="true"
            android:background="@drawable/round"
            android:popupBackground="@drawable/gradient_3"
            android:spinnerMode="dialog" />


        <TextView
            android:id="@+id/titreannoncet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Titre de l'annonce  "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/titreannonce"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:ems="10"

            android:inputType="text"
            android:selectAllOnFocus="true" />

        <TextView
            android:id="@+id/descriptiont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Description de l'annonce "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:ems="10"

            android:inputType="textLongMessage"
            android:selectAllOnFocus="true" />

        <TextView
            android:id="@+id/dureedispot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Durée de disposition (en mois) "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dureedispo"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/villeannoncet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Ville de la location  "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/villeannonce"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:ems="10"

            android:inputType="text"
            android:selectAllOnFocus="true" />

        <TextView
            android:id="@+id/adresseannoncet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Adresse de la location  "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/adresseannonce"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:ems="10"

            android:inputType="textLongMessage"
            android:selectAllOnFocus="true" />

        <TextView
            android:id="@+id/surfacet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Surface (en mètre carré)  "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/surfaceannonce"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/loyert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Loyer (en euros)  "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/loyerannonce"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/contactet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Type de contact "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/contacteannonce"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:animateLayoutChanges="true"
            android:animationCache="true"
            android:background="@drawable/round"
            android:popupBackground="@drawable/gradient_3"
            android:spinnerMode="dialog" />

        <ImageView
            android:id="@+id/photo1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:onClick="ajoutphoto"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/photo2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:onClick="ajoutphoto"
            android:src="@drawable/camera" />


        <Button
            android:id="@+id/btndeposer"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:enabled="false"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="deposerannonce"
            android:text="Déposer annonce"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/loaddeposer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>